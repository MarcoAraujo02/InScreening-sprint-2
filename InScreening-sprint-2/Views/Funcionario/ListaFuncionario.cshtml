    @model List< InScreening_sprint_2.Models.Funcionario>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <style>
        .titulo {
            margin-left: 37%;
        }

        .tabela {
            margin-top: 5%;
            margin-left: 33%;
            text-align: left;
        }

        .btn {
            background-color: #02ac92;
            padding: 10px 20px;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 2px;
            cursor: pointer;
            border-radius: 10px;
            border: 2px dashed #02ac92;
            box-shadow: rgba(50, 50, 93, 0.25) 0px 2px 5px -1px, rgba(0, 0, 0, 0.3) 0px 1px 3px -1px;
            transition: .4s;
        }

            .btn span:last-child {
                display: none;
            }

            .btn:hover {
                transition: .4s;
                border: 2px dashed #02ac92;
                background-color: #fff;
                color: #02ac92;
            }

            .btn:active {
                background-color: #87dbd0;
            }

    </style>
    <link href="/static/css/listacl.css" rel="stylesheet">
    <link href="/static/css/botao.css" rel="stylesheet">
 
</head>  
<a class="btn" asp-area="" asp-controller="Hospital" asp-action="Index">Voltar</a>

<body>


  
    <div class="btn-link-flash" role="alert" align="center">
    </div>

    <h1 class="titulo">Lista de funcionarios</h1>



    <table class="tabela" bgcolor="black" width="500">

        <tr bgcolor="grey" align="center">
            <th width="100">Nome</th>
            <th width="100">Cpf</th>
            <th width="100">Email</th>
            <th width="100">Editar</th>

        </tr>
        <tbody>
            @foreach (var funcionario in Model)
            {
                <tr bgcolor="lightgrey" align="center">
                    <td>@funcionario.Nome</td>
                    <td>@funcionario.Cpf</td>
                    <td>@funcionario.Email</td>
                    <td>
                        <a asp-controller="Funcionario" asp-action="EditarPage" asp-route-id="@funcionario.Id">Editar</a>
                        <a asp-controller="Funcionario" asp-action="DeletarFuncionario" asp-route-id="@funcionario.Id">Deletar</a>
                    </td>
                </tr>
            }


        </tbody>

    </table>

</body>
</html>