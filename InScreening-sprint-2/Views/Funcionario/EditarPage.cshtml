<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inscreening</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inscreening.styles.css" asp-append-version="true" />
    <style>
        .formulario {
            margin-top: 10%;
            margin-left: 25%;
            width: 50%
        }

        .titulo {
            margin-left: 48%
        }

        .titulo2 {
            margin-left: 24%
        }

        .btn {
            margin-left: 48%
        }

        .criar {
            margin-left: 45%
        }

        .aa {
            margin-left: 5%;
            font-size: 50px;
            margin-top: 155%
        }
    </style>
</head>
<body>
 @model InScreening_sprint_2.Models.Funcionario

    <form asp-controller="Funcionario" asp-action="AlterarFuncionario" method="post">
        <h1 class="titulo2">Cadastrar Funcionario</h1>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="titulo">Nome</label>
            <input name="Nome" type="text" class="form-control" id="exampleInputEmail1" asp-for="Nome">
        </div>

        <div class="mb-3">
            <label for="exampleInputPassword1" class="titulo">Cpf</label>
            <input name="Cpf" type="text" class="form-control" id="exampleInputPassword1" asp-for="Cpf">
        </div>

        <div class="mb-3">
            <label for="exampleInputPassword1" class="titulo">Email</label>
            <input name="Email" type="text" class="form-control" id="exampleInputPassword1" asp-for="Email">
        </div>
  

        <input type="hidden" name="Id" value="@Model.Id">

        <button type="submit" class="btn btn-primary">Submit</button>
        <br />
        <br />
    </form>

</body>
</html>
